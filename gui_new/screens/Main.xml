<GUI>  
  <GuiElement type="image" template="cpMain" id="gui_dialog">  
	<!--Header-->
    <GuiElement type="image" template="cpMainBarTop">  
        <GuiElement type="guiMover" template="cpMainGuiMover" target="gui_dialog" /> 
        <GuiElement type="image" template="cpMainLogo" /> 
        <GuiElement type="text" template="cpMainTitle1" text="COURSE" /> 
        <GuiElement type="text" template="cpMainTitle2" text="PLAY" /> 
        <GuiElement type="text" template="cpMainVersion" text="v6.04.00001.dev" /> 
        <GuiElement type="button" template="cpMainCloseButton" onClick="onClose" /> 
    </GuiElement>
	
	<!--Buttons left [PAGES]-->
    <GuiElement type="flowLayout" template="cpMainLayout">
      <GuiElement type="flowLayout" template="cpMainLayout1">
	  	  
        <!--Recording and Driving-->
        <GuiElement type="button" template="cpMainCategorie_Steering" onEnter="onEnableHelp" onLeave="onDisableHelp" 
                    onClick="onClickOpenPage" parameter="steering" id="guiBtnSteering"/>
		    
        <!--Opens CourseManager_GUI-->
        <GuiElement type="button" template="cpMainCategorie_CourseManager"  onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onOpenCourseManager" parameter="courseManager" />
		    
        <!--Speed Settings-->
        <GuiElement type="button" template="cpMainCategorie_Speed" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickOpenPage" parameter="speed" id="guiBtnSpeed" /> 
        	    
        <!--Vehicle Settings-->
        <GuiElement type="button" template="cpMainCategorie_SettingsVehicle" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickOpenPage" parameter="settingsVehicle" id="guiBtnSettingsVehicle" /> 
        
        <!--Field Settings-->
        <GuiElement type="button" template="cpMainCategorie_SettingsField" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickOpenPage" parameter="settingsField" id="guiBtnSettingsField"/>  
        
        <!--Filling Settings-->
        <GuiElement type="button" template="cpMainCategorie_SettingsFilling" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickOpenPage" parameter="settingsFilling" id="guiBtnSettingsFilling" /> 

         <!--Unloader Control [Page0]-->
        <GuiElement type="button" template="cpMainCategorie_Drivers" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickOpenPage" parameter="drivers" id="guiBtnDrivers" />

        <!--Combine Manager-->
        <GuiElement type="button" template="cpMainCategorie_DriversSearch" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickOpenPage" parameter="driversSearch" id="guiBtnDriversSearch" />        
        
        <!--Advanced Settings Gui-->
        <GuiElement type="button" template="cpMainCategorie_Settings" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onOpenSettings" parameter="settings" id="guiBtnSettings"/> 

        <!--Mode 9 Settings-->
        <GuiElement type="button" template="cpMainCategorie_ShovelMode" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickOpenPage" parameter="shovelMode" id="guiBtnShovelMode"/> 
        
        <!--Mode 10 Settings-->
        <GuiElement type="button" template="cpMainCategorie_BunkerSilo" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickOpenPage" parameter="bunkerSilo" id="guiBtnBunkerSilo"/> 
                    
      </GuiElement>

	  <!--pageLoad for Buttons-->
      <GuiElement type="flowLayout" template="cpMainLayout2">
        <GuiElement type="element" template="cpMainPagePosition">
          <GuiElement type="pageLoad" gui="CpGuiPageSteering" pageId="steering" buttonId="guiBtnSteering" />
          <GuiElement type="pageLoad" gui="CpGuiPageDriversSpeed" pageId="speed" buttonId="guiBtnSpeed" />
          <GuiElement type="pageLoad" gui="CpGuiPageSettingsVehicle" pageId="settingsVehicle" buttonId="guiBtnSettingsVehicle" /> 
          <GuiElement type="pageLoad" gui="CpGuiPageSettingsField" pageId="settingsField" buttonId="guiBtnSettingsField" /> 
          <GuiElement type="pageLoad" gui="CpGuiPageSettingsFilling" pageId="settingsFilling" buttonId="guiBtnSettingsFilling" /> 
          <GuiElement type="pageLoad" gui="CpGuiPageDrivers" pageId="drivers" buttonId="guiBtnDrivers" />
          <GuiElement type="pageLoad" gui="CpGuiPageDriversSearch" pageId="driversSearch" buttonId="guiBtnDriversSearch" />
          <GuiElement type="pageLoad" gui="CpGuiPageDriversShovel" pageId="shovelMode" buttonId="guiBtnShovelMode" />
          <GuiElement type="pageLoad" gui="CpGuiPageDriversSiloCompaction" pageId="bunkerSilo" buttonId="guiBtnBunkerSilo" />
        </GuiElement>
        
		<!--Buttons bottom [MODES]-->
        <GuiElement type="flowLayout" template="cpMainLayout3">
          <GuiElement type="button" template="cpMainCategorie_mode1" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickSelectMode" parameter="1" id="mode1"/> 
          <GuiElement type="button" template="cpMainCategorie_mode2" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickSelectMode" parameter="2" id="mode2"/> 
          <GuiElement type="button" template="cpMainCategorie_mode3" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickSelectMode" parameter="3" id="mode3"/> 
          <GuiElement type="button" template="cpMainCategorie_mode4" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickSelectMode" parameter="4" id="mode4"/> 
          <GuiElement type="button" template="cpMainCategorie_mode5" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickSelectMode" parameter="5" id="mode5"/> 
          <GuiElement type="button" template="cpMainCategorie_mode6" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickSelectMode" parameter="6" id="mode6"/> 
          <GuiElement type="button" template="cpMainCategorie_mode7" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickSelectMode" parameter="7" id="mode7"/> 
          <GuiElement type="button" template="cpMainCategorie_mode8" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickSelectMode" parameter="8" id="mode8"/>
          <GuiElement type="button" template="cpMainCategorie_mode9" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickSelectMode" parameter="9" id="mode9"/>
          <GuiElement type="button" template="cpMainCategorie_mode10" onEnter="onEnableHelp" onLeave="onDisableHelp" onClick="onClickSelectMode" parameter="10" id="mode10"/>
        </GuiElement>

      </GuiElement>
    </GuiElement>







    
    <GuiElement type="image" template="cpMainBarBottom">      
        <GuiElement type="image" template="cpMainBarBottomIcon" />  
        <GuiElement type="text" template="cpMainBarBottomHelptext" id="gui_helpText" /> 
    </GuiElement>
  </GuiElement>

  <!--Additional information for the gui.-->

  <!--Which pages/page-buttons are disable for these modes.
    - name : page id
    - value : modes
  -->
  <DisabledPagesByModes>
    <DisabledPageByModes name="steering" value=""/>
    <DisabledPageByModes name="courseManager" value=""/>
    <DisabledPageByModes name="speed" value=""/>
    <DisabledPageByModes name="settingsVehicle" value=""/>
    <DisabledPageByModes name="settingsField" value="1 2 3 5 7 8 9 10"/>
    <DisabledPageByModes name="settingsFilling" value="5 7 9 10"/>
    <DisabledPageByModes name="settings" value=""/>
    <DisabledPageByModes name="drivers" value="1 2 3 4 5 7 8 9 10"/>
    <DisabledPageByModes name="driversSearch" value="1 4 5 6 7 8 9 10"/>
    <DisabledPageByModes name="shovelMode" value="1 2 3 4 5 6 7 8 10"/>
    <DisabledPageByModes name="bunkerSilo" value="1 2 3 4 5 6 7 8 9"/>
  </DisabledPagesByModes>
  
</GUI>